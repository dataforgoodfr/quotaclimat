# Dockerfile for S3 Factiva to PostgreSQL processor
# Processes article and stats data from S3 into PostgreSQL

FROM python:3.12.10 AS builder

ENV VIRTUAL_ENV=/app/.venv
ENV POETRY_NO_INTERACTION=1 \
    POETRY_VIRTUALENVS_IN_PROJECT=1 \
    POETRY_VIRTUALENVS_CREATE=1 \
    POETRY_CACHE_DIR=/tmp/poetry_cache

WORKDIR /app

COPY pyproject.toml poetry.lock ./
RUN pip install poetry==2.1.3
RUN poetry install --no-root --without dev

FROM python:3.12.10-slim AS runtime

WORKDIR /app

ENV VIRTUAL_ENV=/app/.venv 
ENV PATH="/app/.venv/bin:$PATH"
ENV PYTHONPATH=/app

COPY --from=builder ${VIRTUAL_ENV} ${VIRTUAL_ENV}

# Copy application code
COPY quotaclimat ./quotaclimat
COPY postgres ./postgres
COPY pyproject.toml ./pyproject.toml
COPY alembic_factiva/ ./alembic_factiva
COPY alembic_factiva.ini ./alembic_factiva.ini
COPY my_dbt_project_print_media/ ./my_dbt_project_print_media

# Create tmp directory for temporary files
RUN mkdir -p /tmp/s3_factiva_to_postgre

# Healthcheck port
EXPOSE 5000

# Copy entrypoint script for migrations
COPY docker-entrypoint-s3-factiva-to-postgre.sh ./docker-entrypoint-s3-factiva-to-postgre.sh
RUN chmod +x ./docker-entrypoint-s3-factiva-to-postgre.sh

# Entrypoint with migrations
ENTRYPOINT ["./docker-entrypoint-s3-factiva-to-postgre.sh"]

